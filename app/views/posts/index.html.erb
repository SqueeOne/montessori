<div class="col-md-6 offset-md-3">
  <% if notice %>
    <div class="alert alert-danger"><%= notice %></div>
  <% end %>
      <% @posts.each do |post| %>
        <div class="blog-post-small">
          <h2 class="post-title"><%= post.title %></h2>
          <h6 class="small-text"><%= post.created_at.strftime('%b %d, %Y') %></h6>
          <p><%= raw (post.body).truncate(358) %></p>
          <div class="btn-group float-right" role="group" aria-label="form actions">
            <%= link_to 'Show', post, class: 'btn btn-sm btn-outline-info' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-outline-info' %></td>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
      <% end %>
  
  <%= link_to 'New Post', new_post_path %>
</div>
